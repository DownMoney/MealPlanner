    function fill(data){
      console.log(data);
      for(var j=0; j<data.length; j++){
        
        var tags = '';

        for (var i = 0; i < data[j]['cautions'].length; i++) {
          tags += '<span>'+data[j]['cautions'][i]+'</span> ';
        };

        for (var i = 0; i < data[j]['dietLabels'].length; i++) {
          tags += '<span>'+data[j]['dietLabels'][i]+'</span> ';
        };
        for (var i = 0; i < data[j]['healthLabels'].length; i++) {
