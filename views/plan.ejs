    function rem(entry, id){
      $.post('/api/remove', {id: id});
      $('#panel'+entry).attr('onclick','').unbind('click');
      $('#panel'+entry).html('<span class="glyphicon glyphicon glyphicon-plus-sign"></span>');
      $('#panel'+entry).click(function(){
        var $this   = $(this),
            tileNum = $this.attr("entry");
